<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/light_green_background"
    tools:context=".MemoryActivity">

    <ImageView
        android:id="@+id/memory_image"
        android:layout_width="match_parent"
        android:layout_height="425dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/default_profile_image"
        />
    <TextView
        android:id="@+id/destination_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_margin="5dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/check_in_date"
            android:layout_width="0dp"
            android:layout_weight="1.75"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Date"
            android:textSize="18sp"
            android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/memory_caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption: Description Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_margin="5dp" />

</LinearLayout>